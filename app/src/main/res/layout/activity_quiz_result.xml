<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    android:columnCount="4"
    android:columnOrderPreserved="false">


    <ImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu" />

    <Button
        android:id="@+id/exit"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_below="@id/menu"
        android:layout_marginTop="17dp"
        android:background="@drawable/left"/>

    <TextView
        android:id="@+id/quiz"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/exit"
        android:gravity="center"
        android:text="결과"
        android:textColor="#000000"
        android:textSize="20sp"  />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quiz"
        android:src="@drawable/line3" />


    <LinearLayout
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/correct"
        android:layout_marginTop="20dp"
        android:background="#F6F6F6"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="틀린 문제"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ListView
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="300dp"

            android:text="어댑터뷰?"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/correct"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_below="@+id/quiz"
        android:layout_marginTop="30dp"
        android:gravity="right|bottom"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/total"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_below="@+id/quiz"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/correct"
        android:gravity="bottom"
        android:paddingBottom="10dp"
        android:textSize="30sp" />


    <Button
        android:id="@+id/retry"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/feedback"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius"
        android:gravity="center"
        android:text="틀린 문제 다시 풀기"
        android:textColor="#000000" />

    <Button
        android:id="@+id/finish"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/feedback"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/retry"
        android:background="@drawable/radius"
        android:gravity="center"
        android:text="QUIZ 끝내기"
        android:textColor="#000000" />

</RelativeLayout>

