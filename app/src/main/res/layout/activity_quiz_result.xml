<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    android:columnCount="4"
    android:columnOrderPreserved="false">


    <ImageView
        android:id="@+id/menu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/user"
        android:alpha="0"/>


    <TextView
        android:id="@+id/quiz"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="결과"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quiz"
        android:src="@drawable/line3" />


    <TextView
        android:id="@+id/wrongQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/total"
        android:paddingLeft="15dp"


        android:text="틀린 문제"
        android:textColor="#000000"
        android:textSize="15sp"/>



    <LinearLayout
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/wrongQ"
        android:layout_marginTop="7dp"
        android:background="#F6F6F6"
        android:orientation="vertical">



        <ListView
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text=" "
            android:textColor="#000000"
            android:textSize="15sp"
            android:divider="#00FFFFFF"/>
    </LinearLayout>


    <TextView
        android:id="@+id/correct"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_below="@+id/quiz"
        android:layout_marginTop="20dp"
        android:gravity="right|center_vertical"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/total"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_below="@+id/quiz"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/correct"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:textSize="30sp" />


    <Button
        android:id="@+id/retry"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"

        android:layout_gravity="left"
        android:layout_marginBottom="10dp"
        android:background="@drawable/radius"
        android:gravity="center"
        android:text="틀린 문제 다시 풀기"
        android:textColor="#000000" />

    <Button
        android:id="@+id/finish"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/retry"
        android:background="@drawable/radius"
        android:gravity="center"
        android:text="QUIZ 끝내기"
        android:textColor="#000000" />

</RelativeLayout>

